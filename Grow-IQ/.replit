modules = ["python-3.11"]

[nix]
channel = "stable-23.11"
packages = ["openssl", "postgresql"]

[deployment]
deploymentTarget = "cloudrun"
run = ["sh", "-c", "uvicorn app:app --host 0.0.0.0 --port 8000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[env]
PYTHONPATH = "${PYTHONPATH}:${REPL_HOME}"
